{
  "name": "nextjs-typescript-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettier": "prettier --check . || (echo \"Format the files with: 'yarn fmt'\" && exit 1)",
    "fmt": "prettier --write .",
    "export": "next export",
    "prod": "sudo docker build -f .Dockerfiles/prod.Dockerfile -t kerp-frontend . && sudo docker run -p 80:80 kerp-frontend",
    "push-image": "docker push url-registry/kerp-frontend:latest"
  },
  "dependencies": {
    "next": "12.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/node": "16.11.7",
    "@types/react": "17.0.34",
    "eslint": "7",
    "eslint-config-next": "12.0.3",
    "typescript": "4.4.4",
    "prettier": "^2.4.1"
  }
}
